<odoo>
    <record id="wizard_autores" model="ir.ui.view">
        <field name="name">Asistente de Reporte de Autores</field>
        <field name="model">reglib.impresion</field>
        <field name="arch" type="xml">
            <form string="Autores">
                <field invisible="1" name="state"/>
                <div states="choose">
                    <group>
                        <group>
                            <field name="autores" string="Autores" required="1"/>
                        </group>
                    </group>
                </div>
                <div states="get">
                <group>
                    <field name="name" colspan="4" invisible="1"/>
                    <field name="report" filename="name" colspan="4"/>
                </group>
                </div>
                <footer states="choose">
                    <button name= "imprimir_pdf" string="Exportar PDF" type="object" class="oe_highlight"/>
                    <!-- <button name="generate_xls_report" string="Exportar EXCEL" type="object" class="oe_highlight"/> -->
                    <button special="cancel" string="Cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>